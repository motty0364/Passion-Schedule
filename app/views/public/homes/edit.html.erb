<h1>プロフィール編集</h1>

<%= form_with model: @user, url: home_path(@user), method: :patch do |f| %>

<h4>User ID</h4>
<%= @user.user_code %>

<!--<h4>パスワード</h4>-->
<!--<%= f.text_field :encrypted_password %>-->

<!--<h4>メールアドレス</h4>-->
<!--<%= f.text_field :email %>-->

<h4>名前</h4>
<%= f.text_field :name %>

<h4>プロフィール画像</h4>
<% if @user.profile_image.attached? %>
  <%= image_tag @user.profile_image, size: "100x100" %>
  <%= link_to "画像削除", home_path(@user), method: :delete, "data-confirm" => "画像を削除しますか？", class: "btn btn-danger" %><br>
  <%= f.file_field :profile_image, accept: "image/*" %>
<% else %>
  <%= image_tag 'no_image.jpg', size: "100x100" %>
  <%= f.file_field :profile_image, accept: "image/*" %>
<% end %>
<h4>コメント</h4>
<%= f.text_area :comment %>
<%= f.submit '保存' %>
<% end %>