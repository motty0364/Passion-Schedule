    <div class="row d-flex">
      <div class="col justify-content-start">
        <h1><%= title %></h1>
      </div>
      <% if action_name == "edit" %>
        <div class="col justify-content-end">
          <%= link_to "プロジェクト削除", project_path(project), method: :delete, "data-confirm" => "プロジェクトを削除しますか？", class: "btn btn-danger" %>
        </div>
      <% else %>
      
      <% end %>
    </div>
    <%= form_with model: project do |f| %>
      <div class="mb-2">
        <%= f.label :title, "プロジェクト名" %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="mb-2">
        <%= f.label :description, "プロジェクト概要" %>
        <%= f.text_area :description, rows: 5, class: "form-control" %>
      </div>

      <div class="mb-2">
        <%= f.label :project_image, "画像設定" %><br>
        <% if project.project_image.attached? %>
          <%= image_tag project.project_image, size: "100x100" %>
          <%= link_to "画像削除", image_destroy_path(project), method: :delete, "data-confirm" => "画像を削除しますか？", class: "btn btn-danger" %><br>
        <% else %>

        <% end %>
        <%= f.file_field :project_image, accept: "image/*" %>
      </div>
      <div class="my-4">
        <%= f.submit submit %>
      </div>
    <% end %>
    <% if action_name == "new" %>
      <%= link_to "戻る", root_path %>
    <% else %>
      <%= link_to "戻る", project_path(project) %>
    <% end %>
  </div>
