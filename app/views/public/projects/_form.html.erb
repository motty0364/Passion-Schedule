<div class="row">
  <div class="col-sm-6 offset-sm-3 col-md-4 offset-md-4">
    <h1><%= title %></h1>
    <%= form_with model: project do |f| %>
      <div class="mb-2">
        <%= f.label :title, "プロジェクト名" %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="mb-2">
        <%= f.label :description, "プロジェクト概要" %>
        <%= f.text_area :description, rows: 5, class: "form-control" %>
      </div>

      <div class="mb-2">
        <%= f.label :image, "画像設定" %><br>
        <% if project.image.attached? %>
        <%= image_tag project.image, size: "100x100" %>
        <%= link_to "画像削除", image_destroy_path(project), method: :delete, "data-confirm" => "画像を削除しますか？", class: "btn btn-danger" %>
        <% else %>

        <% end %>
        <%= f.file_field :image, accept: "image/*" %>
      </div>
      <div class="my-4">
        <%= f.submit submit %>
      </div>
    <% end %>
    <%= link_to "back", root_path %>
  </div>
</div>
